{
  "name": "chain",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "watch": {
    "build-and-start": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "*"
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node --experimental-vm-modules --experimental-wasm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "npm run test --watchAll",
    "build": "tsc -p tsconfig.json",
    "start": "FORCE_COLOR=3 protokit start ./dist/chain.config.js",
    "build-and-start": "pnpm run build && pnpm run start",
    "dev": "npm-watch build-and-start"
  },
  "peerDependencies": {
    "@proto-kit/api": "file:./deps/protokit/packages/api",
    "@proto-kit/cli": "file:./deps/protokit/packages/cli",
    "@proto-kit/common": "file:./deps/protokit/packages/common",
    "@proto-kit/library": "file:./deps/protokit/packages/library",
    "@proto-kit/module": "file:./deps/protokit/packages/module",
    "@proto-kit/protocol": "file:./deps/protokit/packages/protocol",
    "@proto-kit/sdk": "file:./deps/protokit/packages/sdk",
    "@proto-kit/sequencer": "file:./deps/protokit/packages/sequencer",
    "o1js": "link:./deps/protokit/node_modules/o1js",
    "tsyringe": "link:./deps/protokit/node_modules/tsyringe"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/react-dom": "^18.2.7",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint-config-custom": "workspace:*",
    "events": "^3.3.0",
    "jest": "^29.6.1",
    "jest-expect-message": "^1.1.3",
    "loglevel": "^1.8.1",
    "npm-watch": "^0.11.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "ts-jest": "*",
    "tsconfig": "workspace:*",
    "typescript": "5.2.2",
    "url": "^0.11.1",
    "util": "^0.12.5"
  },
  "dependencies": {
    "proofs": "workspace:*",
    "reflect-metadata": "^0.1.13"
  }
}
